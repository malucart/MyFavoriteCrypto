<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/orange">

    <!-- brand -->
    <ImageView
        android:id="@+id/imageView"
        android:layout_marginTop="65dp"
        android:layout_width="180dp"
        android:layout_height="140dp"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/brand_orange" />

    <!-- title animated -->
    <com.luiza.luizacryptotracker.TypeWriter
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/abril_fatface"
        android:text="Join the community"
        android:textColor="@color/white"
        android:textSize="45dp" />

    <!-- description-->
    <TextView
        android:id="@+id/textView2"
        android:layout_width="322dp"
        android:layout_height="130dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="370dp"
        android:fontFamily="@font/judson"
        android:text="Let's get to know all the cryptocurrencies on the market and follow the ones we like the most! You donâ€™t want to lose the opportunity to buy a good crypto."
        android:textColor="@color/white"
        android:textSize="18dp" />

    <!-- facebook login -->
    <Button
        android:id="@+id/btnLogin"
        android:layout_width="289dp"
        android:layout_height="61dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="500dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/button_details"
        android:backgroundTint="@color/white"
        android:drawableLeft="@drawable/com_facebook_favicon_blue"
        android:fontFamily="@font/judson"
        android:text="Sign in/up with Facebook"
        android:textAllCaps="false"
        android:textColor="@color/blue"
        android:textSize="17dp"
        android:textStyle="bold"
        app:backgroundTint="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</RelativeLayout>