<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".LikedActivity">
    <!-- toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/mainToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/orange"
        android:minHeight="?attr/actionBarSize"
        android:tint="@color/black"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp">
        <!-- brand -->
        <ImageView
            android:id="@+id/ivBrand"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:layout_gravity="start"
            android:scaleType="centerInside"
            android:src="@drawable/brand_orange" />
        <!-- full heart red button -->
        <ImageButton
            android:id="@+id/ibFavoriteModel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="244dp"
            android:layout_marginRight="18dp"
            android:background="#00ffffff"
            android:clickable="true"
            android:src="@drawable/ic_baseline_favorite_24"
            app:tint="@color/red" />
    </androidx.appcompat.widget.Toolbar>

    <!-- recycler view for displaying the feed of FavoriteModel cryptos -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvFavoriteModel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/mainToolbar"
        android:layout_marginTop="2dp"
        tools:listitem="@layout/activity_item_liked" />
</RelativeLayout>